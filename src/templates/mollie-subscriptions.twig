{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("studioespresso\\molliesubscriptions\\assetbundles\\molliesubscriptions\\MollieSubscriptionsAsset") %}
{% do view.registerAssetBundle("studioespresso\\molliesubscriptions\\assetbundles\\molliesubscriptionscpsection\\MollieSubscriptionsCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/studioespresso/mollie-subscriptions/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Subscriptions" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('mollie-subscriptions') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@studioespresso/molliesubscriptions/assetbundles/molliesubscriptionscpsection/dist', true) ~ '/img/MollieSubscriptions-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('mollie-subscriptions') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "MollieSubscriptions CP Section body goes here"|t('mollie-subscriptions') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
